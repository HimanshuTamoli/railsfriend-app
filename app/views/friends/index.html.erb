<% if  user_signed_in?%>
  <table class="table table-striped table-bordered table-hover ">
  <thead class = "thead-dark">
    <tr>
      <th style="padding-right: 40px;">First name</th>
     
      <th>Phone</th>
      <th>Twitter</th>
   
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user%>
      <tr>
        <td style="padding: 0 40px 0 20px;">
        <%= link_to friend.first_name + " "  + friend.last_name, friend%>
        </td>
      
        <td style="padding: 0 20px;"><%= friend.phone %></td>
        <td style="padding: 0 20px;"><%= friend.twitter %></td> 
        <td style="padding: 0 20px;"><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td> 
      </tr>
       <% end %> 
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
<% else %>
<h1>Hello Himanshu</h1>
<p>My first Webpage </p>

<% end %>
